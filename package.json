{
  "name": "research-engine",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "NODE_ENV=production bun run dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint-staged": "biome check --write --staged",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
